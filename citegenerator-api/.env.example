# Server
NODE_ENV=development
PORT=3000

# Chrome (browserless)
CHROME_WS_ENDPOINT=ws://chrome-headless:3000
# Optional token if browserless is externally exposed
BROWSERLESS_TOKEN=

# CORS
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,https://citegenerator.org,https://www.citegenerator.org

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=30
# Upper bound on distinct (ip+path) buckets to prevent unbounded memory growth
RATE_LIMIT_MAX_BUCKETS=10000

# Request limits
# Max request body size (bytes) for /api/* (JSON payloads)
API_BODY_MAX_BYTES=32768

# Timeouts
SCRAPE_TIMEOUT_MS=30000

# Caching
SCRAPE_CACHE_TTL_MS=3600000

# Analytics (optional)
# Supported providers: none | posthog
ANALYTICS_PROVIDER=none
POSTHOG_HOST=https://app.posthog.com
POSTHOG_API_KEY=
